<!-- 缴费订单页 paymentOrder  -->
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>缴费订单</title>
	<link rel="stylesheet" type="text/css" href="stylesheets/paymentOrder.css">
	<!--<script src="javascript/首页.js"></script>-->
</head>
<body>
	<div>
		<img class="header" src="images/index/head.png" alt="图像加载失败">
    </div>
    <div class="menu">  <!-- class选择器 -->
        <div class="nav">
            <ul>    <!-- ul标签 -->
                <li><a href="/home">首页</a></li>  <!-- li标签 -->
                <li><a href="/paymentOrder" style="background-color:rgb(52, 152,219)">缴费订单</a></li>
                <li><a href="/orderRecord">订单记录</a></li>
            </ul>
        </div>
    </div>
    <div id="main"><!--容器-->
        <div id="must"><!--必缴-->
            <div>
                <a href="/requiredOrder"><img class="picture" src="images/缴费订单/必缴.png" alt="图像加载失败"></a>
            </div>
            <div>必缴订单</div>
        </div>
        <div id="opt"><!--选缴-->
            <div>
                <a href="/optionalOrder"><img class="picture" src="images/缴费订单/选缴.png" alt="图像加载失败"></a>
            </div>
            <div>选缴订单</div>
        </div>
    </div> 
    <div id="即时订单总额">
        订单总额：<%= totalAmount%> 元
    </div>
    <div>
        <a href="/orderConfirm"><button class="支付订单">去支付</button></a>
    </div>
   
</body>
</html>