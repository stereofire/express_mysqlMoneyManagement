<!-- 支付确认页 paymentConfirmation -->
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>支付确认</title>
	<link rel="stylesheet" type="text/css" href="stylesheets/paymentOrder.css">
	<!--<script src="javascript/首页.js"></script>-->
</head>
<body>
	<div>
		<img class="header" src="images/index/head.png" alt="图像加载失败">
    </div>
    <div class="menu">  <!-- class选择器 -->
        <div class="nav">
            <ul>    <!-- ul标签 -->
                <li><a href="/home">首页</a></li>  <!-- li标签 -->
                <li><a href="/paymentOrder" >缴费订单</a></li>
                <li><a href="/orderRecord">订单记录</a></li>
                <li><a href="/scholarshipRecord">奖学金发放信息</a></li>
                <li class="stuname" >欢迎您：<font color="lightblue"><%= studentName%></font> 同学</li>
                <li style="float:right;background-color: black;"><a href="/loginOut"><img class="loginout_picture" src="images/home/Out.png" alt="图片加载失败">注销登录</a></li>
            </ul>
        </div>
    </div>
 
    <div class="payment_table" >
        <table >
            <tr><!--进度条-->
                <!-- <td>
                    <p class="payment2">&#12288 订单确认 &#12288</p>
                </td> -->
                <td>
                    <p class="payment2">&#12288 支付方式 &#12288</p>
                </td>
                <td>
                    <p class="payment1">&#12288 支付确认 &#12288</p>
                </td>
                <td>
                    <p class="payment2">&#12288 支付结果 &#12288</p>
                </td>
            </tr>
        </table>
    </div>
    <div class="successSubmit_table" >
        <table style="padding-top: 15px;font-size: 14px;">
            <tr>
                <td>&#12288</td>
                <td style="font-size: large;color: forestgreen;padding-top: 10px;">
                    请确认是否已经支付？
                </td>
                <td>&#12288</td>
            </tr>
            <tr>
                <td>&#12288</td>
                <td>
                    订单号：<%= orderNo %>
                </td>
                <td>&#12288</td>
            </tr>
            <tr>
                <td>&#12288</td>
                <td>
                    支付结果：<%= payResult %>
                </td>
                <td>&#12288</td>
            </tr>
        
            <tr>
                <% if(payResult != "支付失败"){ %>
                <td>
                    <a href="/paymentResult"><button class="查询支付">支付成功</button></a>
                    
                </td>
                <% }else{ %>
                    <td>&#12288 &#12288</td>
                <% } %>
                <td>&#12288</td>
                <td>
                    <a href="/paymentMethod?orderNo=<%= orderNo %>"><button class="重新支付">重新支付</button></a>
                </td>
            </tr>
        </table>
    </div>
    <div id="lsx">
        版权所有-©苏州大学数学科学学院校级大创项目组 2020
    </div>
</body>